rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile, and read others' for leaderboard
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can create hydration entries, read their own
    match /hydrationEntries/{entryId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || request.query.limit <= 10);
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Users can read/write their own pet, read others' for friend pet view
    match /pets/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
